---
import { Picture } from "@astrojs/image/components";

interface Props {
  src: string;
  alt: string;
  aspectRatio?: number;
  loading?: "lazy" | "eager";
}

const { src, alt, aspectRatio = 16 / 9, loading = "lazy" } = Astro.props;
---

<Picture
  widths={[600, 800, 1200, 1600]}
  sizes="(max-width: 800px) 90vw, 768px"
  aspectRatio={aspectRatio}
  src={src}
  loading={loading}
  alt={alt}
  class="rounded-lg overflow-hidden"
  width={768}
  height={402}
/>
