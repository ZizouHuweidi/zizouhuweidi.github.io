---
import AppLayout from "@layouts/AppLayout.astro";
import { Picture } from "@astrojs/image/components";
import authorImage from "@images/zizouhuweidi.jpg";
import { author } from "@data/socials";
import Socials from "@components/Socials.astro";
---

<AppLayout>
  <header class="sm:flex sm:items-center sm:justify-between">
    <Picture
      src={authorImage}
      class="rounded-full overflow-hidden inline-flex"
      alt="Image of the author"
      aspectRatio="1:1"
      widths={[160, 320, 480]}
      loading="eager"
      sizes="160px"
      width={160}
      height={160}
    />
    <div class="mt-8 max-w-lg 2xl:max-w-xl sm:my-0 sm:order-first">
      <h1 class="mb-2 text-3xl font-bold tracking-tight text-white sm:text-4xl">
        {author}
      </h1>
      <p class="mb-4 text-zinc-300">
        Software Engineering student and Tech Enthusiast
      </p>
      <p
        class="max-w-prose font-normal text-zinc-400 sm:max-w-sm md:max-w-xl leading-relaxed"
      >
        Welcome to my personal website and blog. I am a Software Engineering
        student and tech enthusiast. Expect to find a documentation of my tech
        journey and a collection of random thoughts and concepts
      </p>
    </div>
  </header>
  <Socials />
</AppLayout>
